// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider          = "postgresql"
  url               = env("DATABASE_URL")
  shadowDatabaseUrl = env("SHADOW_DATABASE_URL")
}

model Game {
  id        Int      @id @default(autoincrement())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  turns     Turn[]
  players   Player[]
  status    String
}

model Player {
  id        Int    @id @default(autoincrement())
  name      String
  character String
  life      Int
  defenses  Int[]
  Turn      Turn[]
  Game      Game?  @relation(fields: [gameId], references: [id])
  gameId    Int?
}

model Results {
  id         Int      @id @default(autoincrement())
  character1 String
  character2 String
  createdAt  DateTime @default(now())
  winner     String
}

model Turn {
  id           Int      @id @default(autoincrement())
  activePlayer Player   @relation(fields: [playerId], references: [id])
  type         String
  dices        String[]
  defense      Int
  Game         Game?    @relation(fields: [gameId], references: [id])
  gameId       Int?
  playerId     Int
  data         String?
}
